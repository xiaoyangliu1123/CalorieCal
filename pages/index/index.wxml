<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="content">
      <view class="image-container" wx:if="{{tempImagePath}}">
        <image src="{{tempImagePath}}" mode="aspectFit" class="selected-image"></image>
      </view>
      
      <view class="result-container" wx:if="{{calories}}">
        <view class="result-card">
          <text class="result-title">预计卡路里</text>
          <text class="calories">{{calories}} 千卡</text>
          <text class="food-name" wx:if="{{foodName}}">食物：{{foodName}}</text>
        </view>
      </view>

      <view class="error-message" wx:if="{{errorMessage}}">
        {{errorMessage}}
      </view>

      <view class="button-container">
        <button class="select-button" bindtap="chooseImage">
          <text class="button-text">选择图片</text>
        </button>
      </view>
    </view>
  </view>
</scroll-view>
