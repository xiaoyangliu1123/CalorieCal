/**index.wxss**/
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.content {
  padding: 20rpx;
}

.image-container {
  width: 100%;
  height: 400rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.selected-image {
  width: 100%;
  height: 100%;
}

.result-container {
  margin: 30rpx 0;
}

.result-card {
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.result-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.calories {
  font-size: 48rpx;
  color: #2575fc;
  font-weight: bold;
  margin: 20rpx 0;
  display: block;
}

.food-name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.error-message {
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff2f0;
  border-radius: 10rpx;
  border: 1rpx solid #ffccc7;
}

.button-container {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.select-button {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 117, 252, 0.3);
}

.button-text {
  font-weight: 500;
}

.select-button:active {
  opacity: 0.9;
} 